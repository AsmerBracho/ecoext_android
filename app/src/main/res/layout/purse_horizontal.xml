<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="3dp">

    <android.support.v7.widget.CardView
        android:id="@+id/parent_layout_purse"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:alpha="0.2"
        android:elevation="1dp"
        app:cardCornerRadius="15dp"
        app:cardMaxElevation="2dp">

        <RelativeLayout
            android:id="@+id/purse_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grayBlue">

            <ImageView
                android:id="@+id/wallet"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_purse" />

            <TextView
                android:id="@+id/purse_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wallet"
                android:layout_alignStart="@+id/wallet"
                android:layout_alignEnd="@+id/wallet"
                android:layout_marginStart="-1dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="-4dp"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeMinTextSize="8sp"
                android:gravity="center"
                android:text="Purse Name"
                android:textAlignment="center"
                android:textColor="#ffffff" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>