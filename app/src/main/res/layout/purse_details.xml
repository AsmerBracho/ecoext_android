<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/parent_layout_purse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:elevation="1dp"
            app:cardMaxElevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/purse_details_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.5"
                android:background="@color/grayBlue"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/wallet"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="19dp"
                    android:alpha="1"
                    android:src="@drawable/ic_purse" />

                <TextView
                    android:id="@+id/purse_details_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/wallet"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="16dp"
                    android:alpha="1"
                    android:text="Purse Name"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/purse_details_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/purse_details_name"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="16dp"
                    android:alpha="1"
                    android:text="Description"
                    android:textColor="#c2bfbf" />

                <TextView
                    android:id="@+id/purse_details_balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/purse_details_description"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="108dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="16dp"
                    android:alpha="1"
                    android:text="Balance"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/delete_purse"
                    android:layout_width="27dp"
                    android:layout_height="25dp"
                    android:layout_below="@+id/wallet"
                    android:layout_alignStart="@+id/wallet"
                    android:layout_alignEnd="@+id/wallet"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/background_circle"
                    android:padding="3dp"
                    app:srcCompat="@drawable/ic_delete" />/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <!--List of Records-->

        <android.support.v7.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/parent_layout_purse"
            app:layout_constraintTop_toBottomOf="@+id/parent_layout_purse">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:text="List of Records" />

            <TextView
                android:id="@+id/purse_details_text_not_found"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginTop="30dp"
                android:text="No Records Found" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/purse_details_list_of_records"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical" />
        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>
</ScrollView>